<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@mipmap/background_image"

    tools:context="bcit.androidgpstracking.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Location"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:text="Send GPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendGPSButton"
        android:onClick="sendGPSText"
        android:src="@drawable/send_gps"
        android:background="#0000"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/gpsButton" />

    <ImageButton
        android:text="Get GPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gpsButton"
        android:onClick="getGPS"
        android:src="@drawable/get_gps"
        android:background="#0000"
        android:layout_alignBottom="@+id/sendGPSButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp" />

    <ImageButton
        android:text="View All"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="viewAll"
        android:src="@drawable/view_all"
        android:background="#0000"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/sendGPSButton"/>

    <Button
        android:text="Plan Trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gpsButton"
        android:layout_toStartOf="@+id/textView"
        android:id="@+id/button2"
        android:onClick="planTrip"/>
</RelativeLayout>
